<div class="row">
  <!-- <a class="nav-item nav-link active" href="#">Home <span class="sr-only">(current)</span></a> -->
  <form id="sign-in-form">
    <input name="credentials[email]" type="text" placeholder="Username" id="sign-in-email">
    <input name="credentials[password]" type="password" placeholder="Password" id="sign-in-password">
    <input type="submit" class="btn btn-primary" value="Sign In">
  </form>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createAccount" id="createAccountButton">
    Create New Account
  </button>
</div>
<div class="modal fade" id="createAccount" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form id="sign-up-form">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="close-create-account-button">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <fieldset>
            <legend>Create an Account</legend>
            <input name="credentials[email]" type="text" placeholder="New Username">
            <input name="credentials[password]" type="password" placeholder="Password">
            <input name="credentials[password_confirmation]" type="password" placeholder="Confirm Password">
            <!-- <input type="submit" class="btn btn-primary" name="submit" value="Save Changes"> -->
          </fieldset>
        </div>
        <div class="modal-footer" id="create-account-message-box">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Create Account</button>
        </div>
      </form>
    </div>
  </div>
</div>
